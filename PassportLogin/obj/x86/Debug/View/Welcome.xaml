<Page
    x:Class="ErrorLog.View.Welcome"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ErrorLog.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <StackPanel Orientation="Vertical" Margin="10,20,10,10">
            <TextBlock x:ConnectionId='1' x:Name="Title" Text="Welcome" FontSize="40" TextAlignment="Center" Foreground="Red" 
                        FontWeight="Bold" FontFamily="Lucida Calligraphy" />
          
            <TextBlock x:ConnectionId='2' x:Name="UserNameText" FontSize="28" TextAlignment="Center" Foreground="Black"/>
            <StackPanel Orientation="Horizontal" Margin="0,30,10,10" HorizontalAlignment="Center">
                <Button x:ConnectionId='5' x:Name="NewButton" Content="New Entries"                  Margin=" 40,0"
                        Foreground="White" Background="DodgerBlue" HorizontalAlignment="Center"/>
               
            </StackPanel>

            <Button x:ConnectionId='3' x:Name="BackToUserListButton" Content="Back to User List"                             
            HorizontalAlignment="Center" Margin="0,20" Foreground="White" Background="DodgerBlue"/>

            <Button x:ConnectionId='4' x:Name="ForgetButton" Content="Forget Me"                                 
            Foreground="White"
            Background="Gray"
            HorizontalAlignment="Center"/>
        </StackPanel>
        
    </Grid>
</Page>

