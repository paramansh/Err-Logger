<Page
    x:Class="ErrorLog.View.NewEntry"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ErrorLog.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <StackPanel Orientation="Vertical" Margin="10,20,10,10">
            <TextBlock x:ConnectionId='1' x:Name="Title" Text="NEW MISTAKES" FontSize="40" TextAlignment="Center" Foreground="Red" 
                        FontWeight="Bold"  />
            <TextBox x:ConnectionId='2' x:Name="textBox" HorizontalAlignment="Center" TextWrapping="Wrap" TextAlignment="Center"
                     Text="Enter Mistake" VerticalAlignment="Center" Width="673" Margin="0,100,0,0"/>
            <TextBlock x:ConnectionId='3' x:Name="textBlock" HorizontalAlignment="Center" Margin="0,60,0,10" TextWrapping="Wrap"
                       Text="Type of Mistake" VerticalAlignment="Top" Height="25" Width="125" FontWeight="Bold"/>
            <CheckBox x:ConnectionId='4' x:Name="conceptualcheckBox" Content="Conceptual" HorizontalAlignment="Center" Height="18"
                      Margin="0,0,0,0"  Width="183"                                     />
            <CheckBox x:ConnectionId='5' x:Name="sillycheckBox" Content="Calculation Error" HorizontalAlignment="Center" Height="26"
                      Margin="0,0,0,0"  Width="183"                                 RenderTransformOrigin="0.653,-1.398"/>
            <CheckBox x:ConnectionId='6' x:Name="othercheckBox" Content="Careless Oversight" HorizontalAlignment="Center" Height="26"
                      Margin="0,0,0,0"  Width="183"                                 RenderTransformOrigin="0.653,-1.398"/>
            <CheckBox x:ConnectionId='7' x:Name="recallcheckBox" Content="Shortcoming in Recall" HorizontalAlignment="Center" Height="26"
                      Margin="0,0,0,0"  Width="183"                                  RenderTransformOrigin="0.653,-1.398"/>
            <CheckBox x:ConnectionId='8' x:Name="timecheckBox" Content="Time Constraint" HorizontalAlignment="Center" Height="26"
                      Margin="0,0,0,0"  Width="183"                                RenderTransformOrigin="0.653,-1.398"/>
            <Button x:ConnectionId='9' x:Name="submitbutton" Content="Another One"  HorizontalAlignment="Center"
                    Margin="0,40,0,0" Foreground="White" Background="DodgerBlue"                            FontSize="15"/>
            <Button x:ConnectionId='10' x:Name="graphbutton" Content="Done for this test" HorizontalAlignment="Center"
                    Margin="0,30,0,0"                          />
            <Button x:ConnectionId='11' x:Name="backButton" Content="Back" HorizontalAlignment="Center" Background="DodgerBlue"
                    Margin="0,30,0,0" VerticalAlignment="Top"                          Foreground="White"/>
        </StackPanel>
        
    </Grid>
</Page>

